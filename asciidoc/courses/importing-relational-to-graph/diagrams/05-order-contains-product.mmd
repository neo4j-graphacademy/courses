classDef forest fill:#edf6e8,stroke:#b7df9c,stroke-width:1.25px,color:#2f5d1e;
classDef highlight fill:#f4f5ff,stroke:#c7d2fe,stroke-width:1.25px,color:#3730a3;
classDef muted fill:#ffffff,stroke:#e5e7eb,stroke-width:1px,color:#334155;
linkStyle default stroke:#94a3b8,stroke-width:1.25px;

graph LR
    subgraph "Graph Model"
        O((Order)):::forest
        P((Product)):::forest
        O -->|"CONTAINS<br/>{quantity, unitPrice, discount}"| P
    end

    subgraph "Relational Model - Junction Table"
        OT[orders table<br/>order_id PK]:::muted
        ODT[order_details table<br/>order_id FK<br/>product_id FK<br/>quantity<br/>unit_price<br/>discount]:::highlight
        PT[products table<br/>product_id PK]:::muted
        OT -.->|referenced by| ODT
        PT -.->|referenced by| ODT
    end
