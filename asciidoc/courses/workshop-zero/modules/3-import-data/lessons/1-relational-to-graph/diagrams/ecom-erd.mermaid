erDiagram
    Customer {
        int customer_id PK
        string name
        string email
        string address
    }
    
    Order {
        int order_id PK
        int customer_id FK
        date order_date
        decimal total_amount
    }
    
    Product {
        int product_id PK
        string name
        string description
        decimal price
    }
    
    Review {
        int review_id PK
        int customer_id FK
        int product_id FK
        int rating
        string comment
        date review_date
    }
    
    OrderProduct {
        int order_id FK
        int product_id FK
        int quantity
        decimal unit_price
    }
    
    Customer ||--o{ Order : "places"
    Order ||--o{ OrderProduct : "contains"
    Product ||--o{ OrderProduct : "included_in"
    Customer ||--o{ Review : "writes"
    Product ||--|| Review : "reviewed_in"
