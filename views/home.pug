block main

  .home
    .learn-neo4j
      .container
        ul.levels
          if current && current.length
            li.level
              h2.level-overline Pick up where you left off

              p.level-title Continue Your Journey

              .horizontal-scroll.hide-scroll
                ul.course-list.course-list--scrollable
                  for course in current
                    li.course-list-item
                      +course(course, beginners)
              +horizontalControls()


          li.level
            if current && current.length
              h2.level-overline Pick another course
            else
              h2.level-overline Where do I start?

            p.level-title !{beginners.title}
            | !{beginners.description}

            .horizontal-scroll.hide-scroll
              ul.course-list.course-list--scrollable
                for course in beginners.courses
                  li.course-list-item
                    +course(course, beginners)
            +horizontalControls()


          li.level
            h2.level-overline Where do I go next?
            p.level-title !{paths.title}

            p !{paths.description}

            div.level-select
              //- div.level-nav
              //-   ul.level-nav-list
              //-     for path, index in paths.children
              //-       li.level-nav-item(class=path.slug === activePath ? 'level-nav-item--active' : '')
              //-         a(href='#'+ path.slug) !{path.title}
              div.level-tabs
                div.tabs
                  for path, index in paths.children
                    a.tab-element(href='#'+ path.slug class=path.slug === activePath ? 'tab--selected' : '' data-target=path.slug)
                      | !{path.title}

                  a.view-all.pull-right(href='/courses') View all courses

                //- p.body-small
                //-   a.view-all(href='/courses') View all courses

              .category-list
                for path, index in paths.children
                  .category.category-path(id=path.slug, class=`${path.slug === activePath ? 'category-path--active tab-target--visible' : ''} category--${path.slug}`)
                    div.category-path-toggle !{path.title}

                    .category-details
                      //- .category-path-icon
                      //-   img(src=`${cdnUrl}/img/static/categories/${path.slug}.svg`, alt=path.title)
                      //- p.category-path-overline Career Path
                      h3.category-path-title !{path.title}

                      .meta
                        dl.meta-list.category-meta-list
                          dt.meta-list-term.category-meta-icon.category-meta-icon--courses
                            span Course Length
                            | !{svg.iconBook}
                          dd.meta-list-definition #{path.courses.length} courses

                      .category-path-description
                        | !{path.description}
                      .category-path-actions
                        a.follow(href=path.link) Follow the !{path.title} path

                    div.category-courses.hide-scroll
                      div.course-list.course-list--stackable
                        for course in path.courses
                          div.course-list-item
                            +course(course, beginners)

                    +horizontalControls()

            //- div.level-footer
            //-   p Or you can choose your own path and pick from our comprehensive list of topics ranging from Application Development to Data Science.
            //-   p
            //-     a(href='/courses/') View all courses

          li.level.level-certification
            h2.level-overline Get Certified
            p.level-title !{certification.title}
            | !{certification.description}

            .horizontal-scroll.hide-scroll
              ul.course-list.course-list--scrollable
                for course in certification.courses
                  li.course-list-item
                    +course(course, beginners)

