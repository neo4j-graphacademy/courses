include ../mixins/date
include ../mixins/json
include ../mixins/hero

doctype html
html(lang='en')
  head
    title
      block title
      | !{title}
      | | Free Neo4j Courses from GraphAcademy

    include ../partials/meta.pug
    include ../partials/header-scripts.pug

    block head

  body.has-notice(class=classes)
    include ../partials/header

    if messages
      for message, key in messages
        .notification(class=`notification--${key}`) !{message}

    include ../partials/breadcrumbs

    .notice Scheduled maintenance planned 21 June 2023 at 09:00-12:00 UTC

    block hero
      if hero
        +hero(hero.title, hero.byline, hero.overline)

    .main
      //- .container

      block main

    include ../partials/footer
    include ../partials/footer-scripts
