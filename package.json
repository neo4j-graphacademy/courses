{
  "name": "@neo4j-education/graphacademy",
  "version": "1.0.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=dev npm run dev:serve & npm run dev:css & npm run dev:ui & npm run dev:cmd",
    "dev:serve": "nodemon --ignore './asciidoc' --ignore './resources' --exec ts-node src/main.ts",
    "dev:cmd": "nodemon -e adoc --ignore 'asciidoc/pages/*.adoc' --exec ts-node src/commands/load-content.ts",
    "dev:css": "sass --watch resources/scss/app.scss public/css/app.css",
    "dev:ui": "webpack",
    "dev:img": "ts-node src/commands/offline/generate-images.ts",
    "dev:constraints": "ts-node src/commands/install-constraints.ts",
    "uglify": "npm run uglify:css && npm run uglify:ui",
    "uglify:css": "uglifycss public/css/app.css > public/css/app.min.css && rm public/css/app.css && mv public/css/app.min.css public/css/app.css",
    "uglify:ui": "uglifyjs public/js/bundle.js > public/js/bundle.min.js && rm public/js/bundle.js && mv public/js/bundle.min.js public/js/bundle.js",
    "watch": "nodemon --exec ts-node -e adoc src/commands/load-content.ts",
    "cmd:certifications": "node dist/commands/load-certifications.js",
    "cmd:reminders": "node dist/commands/send-reminder-emails.js",
    "og:generate": "ts-node src/commands/offline/generate-images.ts",
    "build": "npm run build:src && npm run build:css && npm run build:ui",
    "build:src": "tsc",
    "build:css": "sass resources/scss/app.scss public/css/app.css && npm run uglify:css",
    "build:ui": "webpack --config webpack-prod.config.js  && npm run uglify:ui",
    "cdn": "npm run build && npm run cdn:sync && npm run cdn:invalidate",
    "cdn:sync": "aws s3 cp --acl public-read --recursive public s3://cdn.graphacademy.neo4j.com/assets",
    "cdn:invalidate": "aws cloudfront create-invalidation --distribution-id EKCSCZ2A93Q3N --paths '/*'",
    "lint": "npm run lint:app && npm run lint:ui",
    "lint:app": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'",
    "lint:ui": "./node_modules/.bin/tslint -c tslint.json 'resources/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "cypress:open": "CYPRESS_BASE_URL=http://localhost:3000 cypress open",
    "cypress:prod": "CYPRESS_BASE_URL=https://graphacademy.neo4j.com cypress open",
    "browser": "open https://8ee9d883.databases.neo4j.io/browser/",
    "start": "npm run prod:serve",
    "prod:serve": "NODE_ENV=production node --max-http-header-size=24000 dist/main.js",
    "deploy": "npm run build:src && npm run deploy:content",
    "deploy:content": "ENV_FILE=.env.production node dist/commands/load-content.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/supertest": "^2.0.12",
    "cypress": "^10.3.0",
    "node-html-to-image": "^3.2.4",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "tslint": "^6.1.3"
  },
  "dependencies": {
    "@asciidoctor/core": "^2.2.4",
    "@bugsnag/js": "^7.10.5",
    "@bugsnag/plugin-express": "^7.10.0",
    "@neo4j-ndl/base": "^0.3.1",
    "@neo4j-ndl/react": "^0.3.1",
    "@types/analytics-node": "^3.1.7",
    "@types/compression": "^1.7.2",
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.11",
    "@types/express-flash": "^0.0.2",
    "@types/express-session": "^1.17.4",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^16.11.11",
    "@types/node-forge": "^1.0.4",
    "@types/pug": "^2.0.4",
    "analytics-node": "^6.0.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-redis": "^6.1.3",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "express-flash": "^0.0.2",
    "express-openid-connect": "^2.5.2",
    "express-session": "^1.17.3",
    "form-data": "^4.0.0",
    "highlight.js": "^10.7.2",
    "highlightjs-cypher": "^1.1.1",
    "highlightjs-graphql": "^1.0.2",
    "html-entities": "^2.3.2",
    "jest": "^28.1.3",
    "jsonwebtoken": "^8.5.1",
    "lazyload": "^2.0.0-rc.2",
    "mailgun.js": "^5.0.2",
    "neo4j-driver": "^4.4.1",
    "node-forge": "^1.3.1",
    "normalize.css": "^8.0.1",
    "pug": "^3.0.2",
    "redis": "^4.1.0",
    "rss-parser": "^3.12.0",
    "sass": "^1.49.11",
    "ts-loader": "^9.1.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.4.3",
    "uglify-js": "^3.14.1",
    "uglifycss": "^0.0.29",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0"
  }
}
